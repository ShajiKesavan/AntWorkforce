<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.sample.poc.Activities.ResourceReadMore">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="8dp"
                        android:background="@color/card_color"
                        android:padding="8dp">
                        <TextView
                            android:id="@+id/title"
                            android:text="@string/list_of_interest"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textAllCaps="false"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txtDateTime"
                                android:text="@string/date_time"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textAllCaps="false"
                                android:textSize="16sp"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/txtDateTimeValue"
                                android:text="28/07/2018 08:00"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="6dp"
                                android:textSize="16sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp">
                            <TextView
                                android:id="@+id/employer"
                                android:text="@string/employer"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textAllCaps="false"/>
                            <TextView
                                android:id="@+id/employerValue"
                                android:text=""
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textAllCaps="false"
                                android:layout_marginLeft="6dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp">
                            <TextView
                                android:id="@+id/descptn"
                                android:text="@string/role"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textAllCaps="false"/>
                            <TextView
                                android:id="@+id/descValue"
                                android:text="registered mental health nurse(RMN)"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textAllCaps="false"
                                android:layout_marginLeft="6dp"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:layout_marginTop="5dp">
                                <TextView
                                    android:id="@+id/rate"
                                    android:text="@string/rate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textAllCaps="false"/>
                                <TextView
                                    android:id="@+id/rateValue"
                                    android:text="$20.50/hour"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textAllCaps="false"
                                    android:layout_marginLeft="6dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp">
                                <TextView
                                    android:id="@+id/duration"
                                    android:text="@string/duration"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textAllCaps="false"/>
                                <TextView
                                    android:id="@+id/durationValue"
                                    android:text="8 hours"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textAllCaps="false"
                                    android:layout_marginLeft="6dp"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp">
                            <TextView
                                android:id="@+id/distance"
                                android:text="@string/distance"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textAllCaps="false"/>
                            <TextView
                                android:id="@+id/distanceValue"
                                android:text="0.2 miles"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textAllCaps="false"
                                android:layout_marginLeft="6dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp">
                            <TextView
                                android:id="@+id/address"
                                android:text="@string/address"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textAllCaps="false"/>
                            <TextView
                                android:id="@+id/addressValue"
                                android:text=""
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textAllCaps="false"
                                android:layout_marginLeft="6dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp">
                            <TextView
                                android:id="@+id/vacancies"
                                android:text="@string/vacancies"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textAllCaps="false"/>
                            <TextView
                                android:id="@+id/vacanciesValue"
                                android:text="1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textAllCaps="false"
                                android:layout_marginLeft="6dp"/>
                        </LinearLayout>

                    </LinearLayout>



</android.support.design.widget.CoordinatorLayout>
